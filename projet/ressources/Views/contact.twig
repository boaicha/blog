{% extends "layout.twig" %}

{% block title %} CONTACT {% endblock %}

{% block stylesheets %}
<center>
    <form method="post" action="public?p=contact/send">
        <pre>
            <label>Nom: <input type="text" name="nom" required /></label>
            <label>Email:<input type="email" name="email" required /></label>
            <label>Objet:<input type="text" name="objet" required /></label>
           <label>Message:<br/><textarea name="message"  required rows="6" cols="42" placeholder="Saisissez votre message ici "></textarea></label>
            <input type="submit" name="send" value ="Envoyer"/>
        </pre>
    </form>
</center>

{% endblock %}