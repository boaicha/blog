{% extends "default.twig" %}
{% block content %}

	<!DOCTYPE HTML>
	<html lang="en">
		<head>
			<title>TITLE</title>
			<meta http-equiv="X-UA-Compatible" content="IE=edge">
			<meta name="viewport" content="width=device-width, initial-scale=1">
			<meta charset="UTF-8">

			<link href="../css/common-css/ionicons.css" rel="stylesheet">


			<link href="../css/layout-1/css/styles.css" rel="stylesheet">

			<link href="../css/layout-1/css/responsive.css" rel="stylesheet">
			<link href="../css/comment.css" rel="stylesheet">

			<style>
				.style {
					text-indent: 30%;
				}
			</style>
		</head>
		<body>


			<section class="blog-area section">
				<div class="container">

					<div class="row">


						<div class="col-lg-4 col-md-6" style="width: 370px">
							<a href="public?p=posts/post/{{post.id}}">
								<div class="card h-100">
									<div class="single-post post-style-1">

										<div class="blog-image"><img src="../css/produit/image/{{post.img}}?>" alt="Blog Image"></div>

										<a class="avatar" href="#"><img src="../css/images/icons8-team-355979.jpg" alt="Profile Image"></a>

										<div class="blog-info">

											<h4 class="title">
												<a href="#">
													<b>{{ post.titre }}</b>
												</a>
											</h4>
											<h6 class="title">
												<a href="#">
													<b>{{ post.chapo }}</b>
												</a>
											</h6>

											<ul class="post-footer">
												<li>
													<a href="#">
														<i class="ion-laptop"></i>
														<{{post.date_mjr}}</a></li>
														<li>
															<a href="#">
																<i class="ion-chatbubble"></i>6</a>
														</li>
														<li>
															<a href="#">
																<i class="ion-eye"></i>138</a>
														</li>
													</ul>
												</li>
											</div>
											<!-- blog-info -->
										</div>
										<!-- single-post -->
									</div>
									<!-- card -->
								</a>
							</div>
							<!-- col-lg-4 col-md-6 -->


							<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
							<div class="container">
								<div class="be-comment-block">
									<h1 class="comments-title">Comments (3)</h1>
									{% for commentSing in comment %}

										<div class="be-comment">
											<div class="be-img-comment">
												<a href="blog-detail-2.html">
													<img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="" class="be-ava-comment">
												</a>
											</div>
											<div class="be-comment-content">

												<span class="be-comment-name">
													<a href="blog-detail-2.html">Ravi Sah</a>
												</span>
												<span class="be-comment-time">
													<i class="fa fa-clock-o"></i>
													{{ commentSing.date }}
												</span>

												<form method="POST" action="public?p=adminPost/valideComment/{{commentSing.id}}">
													<p class="be-comment-text">
														{{ commentSing.commentaire }}  &nbsp;  &nbsp;  &nbsp; 
													</p>
													<button type="submit">Valider</button>

												</form>

											</div>
										</div>
									{% endfor %}
								</br>
							</br>

							<form method="POST" action="public?p=posts/post/{{post.id}}">
								<div class="row">
									<div class="col-xs-12">
										<div class="form-group">
											<textarea name="comment" class="form-input" required="" placeholder="Your text"></textarea>
										</div>
									</div>
									{# <a class="btn btn-primary pull-right" type="submit">submit</a> #}
									<button type="submit" value="your_value" class="btn btn-primary pull-right">Go</button>
								</div>
							</form>
						</div>
					</div>
				</div>
				<!-- card -->
			</div><!-- col-lg-4 col-md-6 --></body>
	</html>
</section></div><!-- SCIPTS --><script src="vue/common-js/jquery-3.1.1.min.js"></script><script src="vue/common-js/tether.min.js"></script><script src="vue/common-js/bootstrap.js"></script><script src="vue/common-js/scripts.js"></script></body></html>{% endblock %}{# {{post.id}} #}
