{% extends "default.twig" %}

{% block content %}

    <!DOCTYPE html>
    <html>
    <head>
        <meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
        <link rel="stylesheet" type="text/css" href="./css/form.css"/>
        <title>inscription</title>

    </head>

    <body>

    <div class="style">
        <form method="POST" action="public?p=inscription" id="formulaire" name="formulaire">

            <div class="container">
                <div class="brand-logo"></div>
                <div class="brand-title">inscription</div>
                <div class="inputs">
                    <label>NOM</label>
                    <input type="text" placeholder="nom" name="nom"
                           onclick="ValidateEmail(document.formulaire.username)">
                    <label>PRENOM</label>
                    <input type="text" placeholder="prenom" name="prenom" id="prenom">
                    <label>EMAIL</label>
                    <input type="text" placeholder="adresse e-mail" name="mail"
                           onclick="ValidateEmail(document.formulaire.username)">
                    <label>PASSWORD</label>
                    <input type="password" placeholder="mot de passe" name="password" id="password">
                    </br>
                    <button type="submit" name="inscription" class="btn">inscription</button>
                    <br>
                </div>
            </div>
        </form>
        {{ prenom }}

    </div>

    {# Verification password #}
    <script>
        let formulaire = document.getElementById('formulaire');

        formulaire.addEventListener('input', function (e) {
            let password = document.getElementById('password');
            let caracteres = /^[a-zA-Z-0-9]+$/;

            if (password.value.trim() == "") {
                let erreur = document.getElementById('erreur');
                erreur.innerHTML = "Le champs password est requis.";
                erreur.style.color = 'red';
                e.preventDefault();
            } else if (caracteres.test(password.value) == false) {
                let erreur = document.getElementById('erreur');
                erreur.innerHTML = "Le password doit comporter des lettres, des chiffres et des tirets.";
                erreur.style.color = 'red';
                e.preventDefault();
            }
        });


        function ValidateEmail(inputText) {
            var mailformat = /^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$/;
            if (inputText.value.match(mailformat)) {
                let erreur = document.getElementById('erreur');
                erreur.innerHTML = "Adresse mail valide.";
                erreur.style.color = 'green';
                // alert("Valid email address!");
                document.formulaire.username.focus();
                return true;
            } else {
                let erreur = document.getElementById('erreur');
                erreur.innerHTML = "Adresse mail invalide.";
                erreur.style.color = 'red';
                // alert("You have entered an invalid email address!");
                document.formulaire.username.focus();
                return false;
            }
        }

    </script>
    <button class="boutton">
        <a href="public?p=connexion">Se connecter</a>
    </button>
    </div>
    </div>
    </body>
    </html>

{% endblock %}
